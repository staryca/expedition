{% extends 'base.content.html.twig' %}

{% block title %}
    Чакайце новыя відэа
{% endblock %}

{% block body %}
    <div class="container py-5">
        <h1 class="h2">Відэа</h1>
        <div class="row">
            <table class="table table-hover">
                <tbody>
                {% for key, marker in markers %}
                    <tr>
                        <td>
                            {{ titles.(key) }}
                        </td>
                        <td>
                            раніцай {{ marker.publish|date("d.m.Y", "Europe/Minsk") }}
                        </td>
                    </tr>
                {% endfor %}

                {% if not isAll %}
                    <tr><td colspan="2">...</td></tr>
                {% endif %}

                </tbody>
            </table>

        </div>
    </div>
{% endblock %}