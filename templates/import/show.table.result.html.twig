{% extends 'base.html.twig' %}

{% block title %}
    Вынікі
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <table class="table table-striped table-hover">
            {% if headers is defined %}
            <thead>
                <tr>
                    {% for name in headers %}
                        <th scope="col">{{ name }}</th>
                    {% endfor %}
                </tr>
            </thead>
            {% endif %}

            <tbody>
                {% for row in data %}
                <tr>
                    {% for key, item in row %}
                        <td>
                            {% if key == 'actions' %}
                                {% for action, icon in item %}
                                    <a class="btn btn-primary" href="{{ path(action, {id: row.id}) }}" role="button"><i class="bi {{ icon }}"></i></a>
                                {% endfor %}
                            {% else %}
                                {{ item|raw }}
                                {% if key == 'id' and item is not empty and actions is defined %}
                                    <br />
                                    {% for action, icon in actions %}
                                        <a class="btn btn-primary" href="{{ path(action, {id: item}) }}" role="button"><i class="bi {{ icon }}"></i></a>
                                    {% endfor %}
                                {% endif %}
                            {% endif %}
                        </td>
                    {% endfor %}
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
